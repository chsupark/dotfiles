syntax enable
set linebreak
set showbreak=+ 
set textwidth=80
set showmatch

set hlsearch
set smartcase
set ignorecase
set incsearch
nnoremap <leader><space> :nohlsearch<CR>

set autoindent
set expandtab
set shiftwidth=4
set smartindent
set softtabstop=4

set showcmd
set cursorline
set wildmenu
set lazyredraw

set foldenable
set foldlevelstart=10
set foldnestmax=10
nnoremap <space> za
set foldmethod=indent

set ruler
set undolevels=10000
set backspace=indent,eol,start	# Modern backspace(by vimconfig.com)
